<div class ="contents row">
  <div class="content_post" style="background-image: url(<%= @item.image %>);">
    <% if user_signed_in? && current_user.id == @item.user_id %>
      <div class="more">
        <span><%= image_tag 'arrow_top.png' %></span>
      <ul class="more_list">
        <li>
          <%= link_to '編集', "/items/#{@item.id}/edit", method: :get %>
        </li>
        <li>
          <%= link_to '削除', "/items/#{@item.id}", method: :delete %>
        </li>
      </ul>
    </div>
    <% end %>
    <%= simple_format(@item.text) %>
    <span class="name">
      <a href="/users/<%= @item.user.id %>">
        <span>投稿者</span><%= @item.user.nickname %>
      </a>
    </span>
  </div>
  <div class = "container">
    <% if current_user %>
      <%= form_tag("/items/#{@item.id}/comments,method: :post") do %>
      <textarea cols="30" name="text" placeholder="コメントする" rows="2"></textarea>
      <input type="submit" value="SENT">
      <% end %>
    <% end %>
  </div>
  <div class="comments">
    <%if @comments %>
      <% @comments.each do |comment| %>
        <p>
          <strong><%= link_to comment.user.nickname,"/user/#{comment.user_id}"%>:</strong>
          <%= comment.text%>
        </p>
      <% end%>
    <%end%>  
  </div>
</div>